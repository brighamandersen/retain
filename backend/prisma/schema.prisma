generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db.sqlite3"
}

model Note {
  id              String   @id @default(uuid())
  title           String?
  content         String?
  createTimestamp Int
  updateTimestamp Int
  isArchived      Boolean  @default(false)
  isTrashed       Boolean  @default(false)
}
